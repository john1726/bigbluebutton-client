	<mate:Listener type="{BBBEvent.USER_VOICE_JOINED}" method="handleAddedListenerEvent"/>
	<mate:Listener type="{BBBEvent.VIDEO_STARTED}" method="videoHasStarted"/>
	
</mx:Application>
